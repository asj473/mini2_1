<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.mlec.mapper.BoardMapper">
	<insert id="insertBoard" parameterType="BoardVO">
		<selectKey keyProperty="no" resultType="int" order="BEFORE">
			select s_board_no.nextval from dual
		</selectKey>
	    insert into tb_board(           
		    no, title, writer, content   
		) values (                       
		    #{no}, #{title}, #{writer}, #{content} 
		)                               
	</insert>
	
	<update id="updateBoard" parameterType="BoardVO">
		update tb_board 
		   set title = #{title},
		       content = #{content} 
		 where no = #{no}    	    
	</update>
	
	<delete id="deleteBoard" parameterType="int">
	    delete
	      from tb_board
	     where no = #{no} 
	</delete>
	
	<resultMap id="boardMap" type="BoardVO">
	    <result column="no" property="no" />
	    <result column="title" property="title" />
	    <result column="writer" property="writer" />
	    <result column="content" property="content" />
	    <result column="reg_date" property="regDate" />
	    <result column="recom" property="recom" />
	</resultMap>
	
	<select id="selectBoard" resultMap="boardMap">
	    select *         
		  from tb_board  
		 order by no desc 
	</select>
	
	<select id="selectBoardByNo" parameterType="int" 
	                             resultMap="boardMap">
	    select *         
		  from tb_board  
		 where no = #{no}
	</select>
	
	
	<!-- ################################# -->
    <!-- 파일 부분 시작 -->	
    <!-- ################################# -->
    <insert id="insertBoardFile" parameterType="BoardFileVO">
		insert into tb_board_file (
			file_no,   
			no,         
			ori_name, 
			system_name, 
			file_path, 
			file_size
		) values (
			s_board_file_no.nextVal, 
			#{no}, 
			#{oriName}, 
			#{systemName},
			#{filePath}, 
			#{fileSize}		
		)
	</insert>
    
    <resultMap id="boardFileMap" type="BoardFileVO" >
		<result property="fileNo" column="file_no"/>
		<result property="no" column="no"/>
		<result property="oriName" column="ori_name"/>
		<result property="systemName" column="system_name"/>
		<result property="filePath" column="file_path"/>
		<result property="fileSize" column="file_size"/>
	</resultMap>
	
	<select id="selectBoardFileByNo" parameterType="int" resultMap="boardFileMap">
	    select file_no,
	           no,
	           ori_name,
	           system_name,
	           file_path,
	           file_size
	      from tb_board_file
	     where no = #{no}      
	</select>  
	
	<!-- 댓글 처리 DAO 시작 -->
	<!-- ################################# -->	
	
    <resultMap id="boardCommentMap" type="BoardCommentVO" >
		<result property="commentNo" column="comment_no"/>
		<result property="no" column="no"/>
		<result property="userId" column="user_id"/>
		<result property="content" column="content"/>
		<result property="regDate" column="reg_date"/>
	</resultMap>
	
	<insert id="insertBoardComment" parameterType="BoardCommentVO">
		insert into tb_board_comment(
			comment_no, no, user_id, content
		) values (
			s_board_comment_no.nextVal, #{no}, #{userId}, #{content}
		)
	</insert>
	
	<select id="selectBoardCommentByNo" parameterType="int" resultMap="boardCommentMap">
	    select comment_no,
	           no,
	           user_id,
	           content,
	           reg_date
	      from tb_board_comment
	     where no = #{no}
	     order by reg_date desc    
	</select>
	
	<delete id="deleteBoardComment" parameterType="int">
	    delete 
	      from tb_board_comment
	     where comment_no = #{commentNo}
	</delete>
	
	<update id="updateBoardComment" parameterType="BoardCommentVO">
	    update tb_board_comment
	       set content = #{content}
	     where comment_no = #{commentNo}
	</update>
	
	<select id="selectBoardRecom" parameterType="int" resultType="int">
		select recom
		  from tb_board
		 where no = #{no}
	</select>	
		
	<update id="updateBoardRecom" parameterType="BoardVO">
		update tb_board
		   set recom = #{recom}
		 where no = #{no}
	</update>
	
	<select id="selectRecom" parameterType="int" resultType="String">
		select id
		  from tb_board_recom
		 where no = #{no}
	</select>
	
</mapper>

