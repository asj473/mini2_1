<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.mlec.mapper.ReviewMapper">


	<resultMap type="ReviewVO" id="reviewMap">
		<result column="no" property="no"/>
		<result column="store_no" property="storeNo"/>
		<result column="id" property="id"/>
		<result column="title" property="title"/>
		<result column="content" property="content"/>
		<result column="rating" property="rating"/>
		<result column="reg_date" property="regDate"/>
	</resultMap>

	<select id="listReview" parameterType="int" resultMap="reviewMap">
		select * 
		  from review, store
	     where review.store_no = store.no
	       and review.store_no = #{no}
	</select>



	<resultMap type="StoreVO" id="storeMap">
		<result column="no" property="no"/>
		<result column="category" property="category"/>
		<result column="name" property="name"/>
		<result column="address" property="address"/>
		<result column="call" property="call"/>
		<result column="rating" property="rating"/>
		<result column="img" property="img"/>
	</resultMap>
	
	<select id="listStore" parameterType="PageVO" resultMap="storeMap">
<!--     	select * -->
<!--     	  from (  -->
<!--     	  		 select rownum as rnum, a.* -->
<!--     	           from (select *   -->
<!--     	                   from store  -->
<!--     	                  order by no desc  -->
<!--     	                ) as a  -->
<!--     	       )  as t -->
<!--     	 where rnum between #{begin} and #{end} -->
		select * from store limit #{begin}, #{end}
    </select> 

    <select id="storeCount" parameterType="PageVO" resultType="int">
    	select count(*)
          from store
    </select> 
    
    
	<select id="detailStore" parameterType="int" resultMap="storeMap">
		select *
	      from store
	     where no = #{no}
	</select>
</mapper>